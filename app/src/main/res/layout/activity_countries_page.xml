<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountriesPage"
    android:background="#04295D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/countryFlag"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/countryName"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensans_bold"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#212121"
                android:layout_marginVertical="12dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Country Name"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/blackishGrey"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Capital Name"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageCapital"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Native Name"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageNativeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Currency Name"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageCurrencyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Currency Symbol"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageCurrencySymbol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Region"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageRegion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Sub Region"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageSubRegion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Border Countries"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryBorders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/blackishGrey"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Population"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPagePopulation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Coordinates"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageCoords"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Demonym"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageDemonym"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Languages"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageLangs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Area"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Time Zone"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageTimeZone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Top Level Domain"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageTimeDomain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Alpha3 Code"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPagea3Code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginVertical="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Calling Code"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/opensans_bold"/>
                        <TextView
                            android:id="@+id/countryPageCallingCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/blackishGrey"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country Flag"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="25sp"
                android:layout_marginHorizontal="10dp"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:id="@+id/flag1"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country Map"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="25sp"
                android:layout_marginHorizontal="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp">
                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/webView"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>